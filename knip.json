{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    "scripts/db/initialize.ts",
    "scripts/ensure-port-free.ts",
    "next.config.mjs",
    "app/layout.tsx",
    "app/**/page.tsx",
    "app/**/route.ts",
    "instrumentation.ts"
  ],
  "project": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.mjs"
  ],
  "ignore": [
    "drizzle/**",
    "tests/**",
    "playwright.config.ts",
    "postcss.config.js",
    "tailwind.config.js",
    "eslint.config.js",
    "next-env.d.ts",
    "scripts/**/node_modules/**"
  ],
  "ignoreDependencies": [
    "ts-node",
    "tsx",
    "vitest",
    "@types/node"
  ],
  "next": {
    "entry": [
      "app/layout.tsx",
      "app/**/{page,layout,template,error,not-found}.tsx",
      "app/**/{route,middleware}.ts",
      "instrumentation.ts"
    ]
  }
}