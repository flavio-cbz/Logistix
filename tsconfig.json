{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["vitest/globals"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/lib/services/*": ["./lib/services/*"],
      "@/lib/utils/*": ["./lib/utils/*"],
      "@/lib/constants/*": ["./lib/constants/*"],
      "@/components/market-analysis/*": ["./components/features/market-analysis/*"],
      "@/components/dashboard/*": ["./components/features/dashboard/*"],
      "@/components/notifications/*": ["./components/features/notifications/*"],
      "@/components/parcelles/*": ["./components/features/parcelles/*"],
      "@/components/produits/*": ["./components/features/produits/*"],
      "@/components/statistiques/*": ["./components/features/statistiques/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "**/*.d.ts",
    "vite.config.ts",
    "tests/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
