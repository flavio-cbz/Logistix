    "db:monitor:export": "node scripts/db-monitor.js export",
    "db:test-apis": "node scripts/test-migration-apis.js",
    "db:check-indexes": "node scripts/check-indexes.js",
    "db:export": "ts-node scripts/db/export-sqlite.ts",
    "db:migrate-complete": "npm run db:migrate-unified && npm run db:refactor && npm run db:validate",
    "maintenance": "ts-node scripts/project-maintenance.ts",
    "cleanup:files": "node scripts/cleanup-cache-temp.js",
    "cleanup:smart": "ts-node scripts/smart-cleanup.ts --execute",
    "cleanup:smart:dry": "ts-node scripts/smart-cleanup.ts --dry-run",
    "cleanup:project": "ts-node scripts/smart-cleanup.ts",
    "cleanup:available": "npm run cleanup:files && npm run cleanup:project",
    "drizzle:studio": "npx drizzle-kit studio --config ./drizzle.config.json",
    "checks": "npm run typecheck && npm run lint",
    "rebuild:native": "npm rebuild better-sqlite3 --build-from-source",
