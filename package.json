{
  "name": "logistix",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "db:initialize": "npx tsx ./scripts/db/initialize.ts",
    "dev": "npm run db:initialize && ts-node scripts/ensure-port-free.ts 3000 && next dev",
    "build": "next build",
    "fix:sqlite3": "bash scripts/fix-sqlite3.sh",
    "start": "next start",
    "typecheck": "tsc --noEmit --project tsconfig.check.json",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test:unit": "vitest run tests/unit --passWithNoTests",
    "test:integration": "vitest run tests/integration --passWithNoTests",
    "test:e2e": "playwright test",
    "test:e2e:ci": "playwright test --reporter=html,json,github-actions",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:produits": "playwright test tests/e2e/produits-workflow.spec.ts",
    "test:e2e:produits:headed": "playwright test tests/e2e/produits-workflow.spec.ts --headed",
    "test:e2e:produits:debug": "playwright test tests/e2e/produits-workflow.spec.ts --debug",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage --reporter=verbose",
    "test:coverage:watch": "vitest --coverage --watch",
    "test:ui": "vitest --ui",
    "test:runner": "ts-node scripts/run-tests.ts",
    "test:api": "ts-node tests/api/run-all-api-tests.ts",
    "analyze:unused": "knip",
    "cleanup:project": "knip --reporter detailed",
    "knip:ci": "knip --reporter json",
    "db:generate": "ts-node scripts/db/generate.ts",
    "db:migrate": "node scripts/apply-complete-migration.mjs",
    "db:seed": "npx tsx scripts/db/seed.ts",
    "db:test": "node scripts/db/test.js",
    "drizzle:studio": "npx drizzle-kit studio --config ./drizzle.config.json",
    "checks": "npm run typecheck && npm run lint"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@radix-ui/react-alert-dialog": "^1.0.5",
