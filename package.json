    "drizzle-kit": "^0.31.4",
    "eslint": "^9.34.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "jsdom": "^26.1.0",
    "knip": "^5.64.3",
    "playwright": "^1.54.1",
