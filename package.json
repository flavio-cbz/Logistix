    "tsx": "^4.20.6",
    "typescript": "^5.8.3",
    "vite": "^6.0.7",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "overrides": {
    "@npmcli/move-file": "^2.0.0",
    "glob": "^11.0.0",
    "rimraf": "3.0.2"
  },
  "bundlesize": [
    {
      "path": ".next/static/js/**/*.js",
      "maxSize": "300 kB"
    },
    {
      "path": ".next/static/css/**/*.css",
