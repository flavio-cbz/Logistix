    "mysql2": "^3.14.4",
    "nanoid": "^5.1.6",
    "next": "^14.2.32",
    "next-themes": "^0.2.1",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.62.0",
    "recharts": "^2.10.3",
    "server-only": "^0.0.1",
    "sonner": "^2.0.6",
    "tailwind-merge": "^2.1.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^9.0.1",
    "zod": "^3.25.76",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
